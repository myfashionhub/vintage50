<nav class='products'>
  <%= form_tag '/products/search', method: :get, class: 'search' do %>
    <%= text_field_tag :search_term, nil, placeholder: 'Ex: crop top' %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>

  <p class='hidden'>&nbsp;</p>

  <%= form_tag '/products/search', method: :get, class: 'filter' do %>
    <input type='hidden' name='attribute' value='category' />
    <%= select_tag :filter, options_for_select([
      'All','Dress','Top',
      'Skirt', 'One piece', 'Bottoms', 
      'Jacket', 'Intimates', 'Accessories'])
    %>
  <% end %>

</nav>

