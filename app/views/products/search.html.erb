<%= render 'nav' %>

<div class="container">
  
  <% if @products.length == 0 %>
    <p>No product found.</p>

  <% else %>

    <%= will_paginate @products, previous_label: '&laquo;', next_label: '&raquo;' %>  

    <ul class='all_products'>
      <% @products.each do |product| %>
        <%= render partial: 'show', locals: { product: product } %>
      <% end %>
    </ul>  

    <%= will_paginate @products, previous_label: '&laquo;', next_label: '&raquo;' %>
  <% end %>

</div>
