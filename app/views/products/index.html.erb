<%= render 'nav' %>

<div class="flash">
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
</div>

<div class="container">
  <div class="pagination">
    <%= will_paginate @products %>
  </div>

  <ul class='all_products'>
  <% @products.order('created_at DESC').each do |product| %>

      <li>
        <%= product.id %>
        <img src="<%= product.image %>" />
        <a href="<%= product.url %>" target='_blank'>
        <%= product.brand %> <%= product.name %>
        </a> | <%= product.price %>
        <% if product.price.delete('$').to_i < 15 %>
          <div class="steal">&nbsp; STEAL!</div>
        <% end %>
      </li>

  <% end %>
  </ul>


</div>
